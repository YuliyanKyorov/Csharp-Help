//Четене на входни данни:
int[] numbers = Console.ReadLine()     //Console.ReadLine() чете един ред от конзолата като низ.
                .Split()               //.Split() разделя низа на поднизове, използвайки интервали като разделители.
                .Select(int.Parse)     //.Select(int.Parse) конвертира всеки подниз в цяло число.
                .ToArray();            //.ToArray() създава масив от тези цели числа.
//Чете входни данни от конзолата.
//Разделя входния текст на части (числа), използвайки метода Split().
//Преобразува всяка част в цяло число с int.Parse.
//Събира числата в масив numbers.
